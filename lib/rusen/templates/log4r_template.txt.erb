<%= @notification.exception.class %>: <%= @notification.exception.message %>

<% @sessions.each do |name, session| %>
-------------------------------
<%= name %>:
-------------------------------
  <% if session.is_a?(Hash) -%>
    <% session.each do |key, value| -%>
<%= key.to_s + ":\t\t\t" + value.to_s -%>
    <% end -%>
  <% else -%>
    <% session.each do |session_step| -%>
<%= "\t" + session_step %>
    <% end -%>
  <% end -%>
<% end -%>

